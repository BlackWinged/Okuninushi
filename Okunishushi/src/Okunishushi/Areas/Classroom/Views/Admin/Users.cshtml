@{
    ViewData["Title"] = "Users";
    Layout = "_classroomLayout";
}
@model List<Okunishushi.Models.User>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-icon" data-background-color="purple">
                    <i class="material-icons">assignment</i>
                </div>
                <div class="card-content">
                    <h4 class="card-title">All students</h4>
                        <a href="@Url.Action("newuser", "admin")" class="btn btn-info btn-fill pull-right">Add New User</a>
                    <div class="toolbar">
                        <!--        Here you can write extra buttons/actions for the toolbar              -->
                    </div>
                    <table class="table">
                        <thead class="text-primary">
                        <th>Name</th>
                        <th>Role</th>
                        </thead>
                        <tbody>
                            @foreach (Okunishushi.Models.User user in Model)
                            {
                                <tr>
                                    <td><a href="@Url.Action("newuser" , "admin", new { id = user.Id.ToString() })"> @user.Username</a></td>
                                    <td>@(user.UserRole?.Count > 0 ? String.Join(", ", user.UserRole?.Select(x => x.Role.Name)) : "")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>