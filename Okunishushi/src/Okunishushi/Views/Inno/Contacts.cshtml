@{
    ViewData["Title"] = "About";
    Layout = "_innoLayout";
}

    <!-- PAGE TITLE SMALL -->
<div class="sca_page_title sca_page_title_great sca_image_bck sca_fixed sca_wht_txt" data-stellar-background-ratio="0.2" data-image="images/hotel/wcvqq3ld-qi-martin-ezequiel-sanchez.jpg">


    <!-- Over -->
    <div class="sca_over" data-color="#282828" data-opacity="0.7"></div>

    <div class="container text-left">
        <div class="row">

            <div class="col-md-8">
                <h1 class="sca_h1_title">Contacts</h1>
                <h3>Some Subtitle</h3>
            </div>

            <div class="col-md-4">
                <div class="breadcrumbs">
                    <a href="#">Home</a><a href="#">PAGES & FEATURES</a><span>Contacts</span>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Content -->
<section id="sca_content" class="sca_content">


    <!-- section -->
    <section class="sca_section sca_border">
        <div class="container-fluid">
            <div class="row sca_auto_height">
                <div class="col-md-6 sca_bordered_block sca_image_bck sca_grey_border sca_wht_txt" data-image="images/hotel/c8wwhcvb9p4-scott-webb.jpg">
                    <div class="sca_over" data-color="#292929" data-opacity="0.8"></div>
                    <div class="sca_simple_block">
                        <h2 data-animation="animation_blocks" data-bottom="@@class:noactive" data--100-bottom="@@class:active">Contacts</h2>
                        <ul class="spa_contacts_form">
                            <li><span class="ti ti-mobile"></span>+11 (0) 200 1111 001</li>
                            <li><span class="ti ti-email"></span><a href="mailto:support@scalatheme.com">support@scalatheme.com</a></li>
                            <li><span class="ti ti-location-pin"></span>Australia place nice, RD nice DHA Road, state pace 786</li>
                        </ul>

                        <h4>
                            Stay informed with our newsletter
                        </h4>
                        <form action="#">
                            <input placeholder="Enter Your Email" class="form-control form-opacity no-margin newsletter_input" type="email" required />
                            <a href="#" class="btn">Subscribe</a>

                        </form>
                        <div class="sca_form_tip">
                            <i class="ti ti-info"></i> Please trust us, we will never send you spam
                        </div>
                    </div>
                </div>
                <div class="col-md-6 sca_bordered_block sca_image_bck sca_grey_border sca_wht_txt" data-image="images/hotel/8rbvywshhe8-mert-byserke.jpg">
                    <div class="sca_over" data-color="#292929" data-opacity="0.8"></div>
                    <div class="sca_simple_block">
                        <h2 data-animation="animation_blocks" data-bottom="@@class:noactive" data--100-bottom="@@class:active">Write Us</h2>
                        <form action="https://formspree.io/your@mail.com" method="POST">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" name="name" class="form-control form-opacity" placeholder="Name*">
                                </div>
                                <div class="col-md-6">
                                    <input type="text" name="surname" class="form-control form-opacity" placeholder="Surname*">
                                </div>

                                <div class="col-md-6">
                                    <input type="text" name="email" class="form-control form-opacity" placeholder="E-mail*">
                                </div>
                                <div class="col-md-6">
                                    <input type="text" name="phone" class="form-control form-opacity" placeholder="Phone">
                                </div>
                                <div class="col-md-12">
                                    <textarea placeholder="Message" name="message" class="form-control form-opacity"></textarea>
                                </div>
                                <div class="col-md-12">
                                    <input type="submit" class="btn submit" value="Send">
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- section end -->
    <!-- section -->
    <section class="sca_section sca_section_sml_padding sca_image_bck sca_border sca_grey_border sca_wht_txt sca_fixed" data-stellar-background-ratio="0.2" data-image="images/creativity/rvp7adbhu2a-lukas-budimaier.jpg">


        <div class="sca_over" data-color="#282828" data-opacity="0.4"></div>
        <div class="container text-center">
            <h3>Do you wnt a successful life?</h3>
            <div class="row">
                <div class="col-md-6 col-md-push-3">
                    <form action="#">
                        <input placeholder="Enter Your Name" class="form-control" type="text" required />
                        <input placeholder="Enter Your E-mail" class="form-control" type="email" required />
                        <input type="submit" value="Send Me" class="btn">
                    </form>
                    <div class="sca_form_tip">
                        <i class="ti ti-info"></i> Please trust us, we will never send you spam
                    </div>
                </div>
            </div>



        </div>
        <!-- container end -->

    </section>
    <!-- section end -->




</section>
<!-- Content End -->
