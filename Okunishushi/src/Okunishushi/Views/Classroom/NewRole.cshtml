@{
    ViewData["Title"] = "Roles";
    Layout = "_classroomLayout";
}
@model Okunishushi.Models.Role

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="header">
                    <h4 class="title">Edit Role</h4>
                </div>
                <div class="content">
                    <form method="post" action="newrolesave">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" name="role_name" class="form-control" placeholder="Role name" value="@Model.Name">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Description</label>
                                    <textarea rows="5"  name="description" class="form-control" placeholder="Describe the role" value="@Model.Description"></textarea>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-info btn-fill pull-right">Add Role</button>
                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
